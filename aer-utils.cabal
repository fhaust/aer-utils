test-suite maintest
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             TestMain.hs
  build-depends:       base,
                       aer,
                       vector-space,
                       thyme,
                       containers,
                       test-framework,
                       test-framework-quickcheck2,
                       test-framework-hunit,
